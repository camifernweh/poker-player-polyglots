{
    "compilerOptions": {
        "module": "nodenext",
        "target": "ES2021",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "out",
        "declaration": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
	"skipLibCheck": true, // Prevents issues from node_modules type checks
    },
    "exclude": [
        "out/*",
        "node_modules",
        "jest.config.js",
        "src/*.test.ts",
        "src/*.spec.ts",
    ]
}
